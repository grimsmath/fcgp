= form_for @page do |f|
  .field
    = f.label :title
    = f.text_field :title
  .field
    %label Page Name (automatically generated)
    = f.text_field :name, readonly: true
  .field
    = f.label :sub_title
    = f.text_field :sub_title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :body
    = f.cktext_area :body
  .actions
    = f.submit 'Save', class: 'button small'
    = link_to 'Back', pages_path, class: 'button small secondary'

:javascript
  $('#page_title').on("keydown keyup", function() {
    newText = $('#page_title').val().replace(/\s+/g, "_").toLowerCase();
    return $('#page_name').val(newText.replace(/[^\w\s_]/g,''));
  });