= form_for @individual do |f|
  - if @individual.errors.any?
    #error_explanation
      %h2= "#{pluralize(@individual.errors.count, "error")} prohibited this individual from being saved:"
      %ul
        - @individual.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :street1
    = f.text_field :street1
  .field
    = f.label :street2
    = f.text_field :street2
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :postalcode
    = f.text_field :postalcode
  .actions
    = f.submit 'Save'
