.navbar.navbar-default.top-nav.navbar-fixed-top{role: "navigation"}
  .container-fluid
    .navbar-header
      %button.navbar-toggle{data:{target: ".navbar-collapse", toggle: "collapse", type: "button"}}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "First Coast Green Pages", root_path, class: 'navbar-brand'
    .navbar-collapse.collapse
      %form.navbar-form.navbar-left
        %input.form-control{placeholder: "Find Green Stuff...", type: "text"}
      %ul.nav.navbar-nav.navbar-left
        %li
          = link_to vendors_path do
            %i.fa.fa-leaf
            Listings
        %li
          = link_to categories_path do
            %i.fa.fa-book
            Categories
        %li
          = link_to 'Sign Up!', signup_path

        - Page.where(parent_id: nil).first(5).each do |page|
          %li
            = link_to page.title, page.name

      %ul.nav.navbar-nav.pull-right
        - if current_user
          %li.dropdown
            %a.dropdown-toggle{data: {toggle: "dropdown"}, href: "#"}
              Welcome #{current_user.email}
              %b.caret
            %ul.dropdown-menu
              - if current_user.admin?
                %li= link_to "Site Administration", admin_path
                %li.divider
              %li= link_to "User Profile", current_user
              %li= link_to "Change Password", current_user
              %li.divider
              %li= link_to "Log out", destroy_user_session_path, :method => :delete
        - else
          %li= link_to 'Sign In', '/users/sign_in'