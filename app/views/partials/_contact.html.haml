= form_tag("/contact", method: "post", id: 'form-contact') do
  %h4(style="color: #fff")
    Send Us a Message

  .form-group
    = text_field_tag :email, nil, class: 'form-control', placeholder: 'Your email address'

  .form-group
    = text_area_tag :message, nil, rows: 5, class: 'form-control', placeholder: 'Your message'

  .form-group
    = submit_tag "Send Message", class: 'btn btn-primary', id: 'contact-submit'

:javascript
  $('#form-contact').submit(function() {
    bootbox.alert({
      message: "Not implemented yet.  Please check back later.",
      title: 'Send Us a Message'
    });
    return false;
  });