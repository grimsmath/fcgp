%span.dropdown
  %button.btn.btn-primary.btn-xs.dropdown-toggle{'data-toggle'=> 'dropdown', 'data-target' => '#', href: '#'}
    Manage
    %span.caret
    %span.sr-only Toggle Dropdown
  %nav.dropdown-menu
    %li
      = link_to edit_category_path(category) do
        %i.fa.fa-edit
        Edit Category
    %li
      = link_to content_tag('i', '', class: 'fa fa-trash-o') + " Delete",
        category, confirm: "Are you sure you want to delete '#{category.title}'?", method: :delete
