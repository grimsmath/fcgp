= form_for @category do |f|
  - if @category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@category.errors.count, "error")} prohibited this category from being saved:"
      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    %label Parent Category
    = collection_select :category, :category_id, Category.all, :id, :name, { include_blank: '' }, class: "large-6"
  .field
    = f.label :enabled
    = f.check_box :enabled
  .actions
    = f.submit 'Save'
