.row
  .columns.large-12
    %h1 Listing categories

    %table.large-12
      %thead
        %tr
          %th Name
          %th Enabled
          %th Category
          %th
          %th
          %th

      %tbody
        - @categories.each do |category|
          %tr
            %td= category.name
            %td= category.enabled
            %td= category.category
            %td= link_to 'Show', category
            %td= link_to 'Edit', edit_category_path(category)
            %td= link_to 'Destroy', category, :method => :delete, :data => { :confirm => 'Are you sure?' }

    %br

    = link_to 'New Category', new_category_path, class: "button"
