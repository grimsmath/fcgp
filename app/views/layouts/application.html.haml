!!!
%html
  %head
    %meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %title First Coast Green Pages
    = google_webfonts_link_tag :source_sans_pro => [400, 700]
    = google_webfonts_link_tag :open_sans => 300
    = google_webfonts_link_tag :raleway => 100
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    %script{:src => "https://maps.googleapis.com/maps/api/js?key=" + Settings["Google.ApiKey"] + "", :type => "text/javascript"}
    = csrf_meta_tags

  %body
    #content_wrapper(style="margin-top: 70px")
      = render 'partials/sitenav'
      = render 'partials/flash'
      = yield

    = render 'partials/sitefoot'
