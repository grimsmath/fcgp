!!!
%html
  %head
    %meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %title Admin | First Coast Green Pages
    = google_webfonts_link_tag :source_sans_pro => [400, 700]
    = google_webfonts_link_tag :open_sans => 300
    = google_webfonts_link_tag :raleway => 100
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    %script{:src => "http://maps.googleapis.com/maps/api/js?sensor=true&key=" + Settings["Google.ApiKey"] + "", :type => "text/javascript"}
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    #content_wrapper
      = render 'partials/sitenav'

      .col-sm-3.col-md-2.sidebar
        = render 'partials/sidebars/admin'

      .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
        = render 'partials/flash'
        = yield

    = render 'partials/sitefoot'

:javascript
  function changeActiveLink(link) {
    $('.sidebar li').each(function (){
      $(this).removeClass("active");
    });

    $("#" + link).addClass("active");
  }

  var myLink = $('section#wrapper').data("link");
  changeActiveLink(myLink);