%span.dropdown
  %button.btn.btn-primary.btn-xs.dropdown-toggle{'data-toggle'=> 'dropdown', 'data-target' => '#', href: '#'}
    Manage
    %span.caret
    %span.sr-only Toggle Dropdown
  %nav.dropdown-menu
    %li
      = link_to edit_vendor_path(vendor) do
        %i.fa.fa-edit
        Edit Vendor
    %li
      - if vendor.enabled
        %a.fa.fa-lock{href: "#"}
          Disable Vendor
      - else
        %a.fa.fa-unlock{href: "#"}
          Enable Vendor
    %li.divider
    %li
      %a.fa.fa-star{href: "#"}
        Upgrade Vendor
    %li.divider
    %li
      = link_to content_tag('i', '', class: 'fa fa-trash-o') + " Delete Vendor",
        vendor, confirm: "Are you sure you want to delete '#{vendor.name}'?", method: :delete
