.row
  .col-md-4.col-sm-4
    .form-group
      %label Main Phone
      .input-group
        .input-group-addon
          .i.fa.fa-phone
        = f.text_field :phone_work, class: 'form-control',
          data: {mask: "999-999-9999"}, placeholder: "xxx-xxx-xxxx" do
          %i.phone.icon

  .col-md-4.col-sm-4
    .form-group
      %label Other Phone
      .input-group
        .input-group-addon
          .i.fa.fa-phone
        = f.text_field :phone_alt, class: 'form-control',
          data: {mask: "999-999-9999"}, placeholder: "xxx-xxx-xxxx" do
          %i.phone.icon

  .col-md-4.col-sm-4
    .form-group
      %label FAX Number
      .input-group
        .input-group-addon
          .i.fa.fa-fax
        = f.text_field :phone_fax, class: 'form-control',
          data: {mask: "999-999-9999"}, placeholder: "xxx-xxx-xxxx" do
          %i.phone.icon

  .col-md-12.col-sm-4
    .form-group
      %label Website URL
      .input-group
        %span.input-group-btn
          %button.btn.btn-primary{:type => "button"}
            %i.fa.fa-globe
        = f.text_field :url, class: "form-control", placeholder: "http://www.somewhere.com"

  .col-md-12.col-sm-4
    .form-group
      %label Email Address
      .input-group
        %span.input-group-btn
          %button.btn.btn-primary{type: "button"}
            .i.fa.fa-envelope
        = f.text_field :email, class: "form-control", placeholder: "jane@company.com"