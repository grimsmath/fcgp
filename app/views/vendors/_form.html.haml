= form_for @vendor do |f|
  - if @vendor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@vendor.errors.count, "error")} prohibited this vendor from being saved:"
      %ul
        - @vendor.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :street1
    = f.text_field :street1
  .field
    = f.label :street2
    = f.text_field :street2
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :postalcode
    = f.text_field :postalcode
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
