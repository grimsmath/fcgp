= form_for @alert do |f|
  - if @alert.errors.any?
    #error_explanation
      %h2= "#{pluralize(@alert.errors.count, "error")} prohibited this alert from being saved:"
      %ul
        - @alert.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :message
    = f.text_area :message
  .field
    = f.label :begins
    = f.datetime_select :begins
  .field
    = f.label :ends
    = f.datetime_select :ends
  .actions
    = f.submit 'Save'
