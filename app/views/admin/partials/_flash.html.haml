.container
  .row
    .col-md-12.col-sm-12
      .flash-div
        - flash.each do |key, value|
          .alert.flash{ class: flash_class(key) }
            %button.close{ :data => { :dismiss => "alert" } } x
            %strong
              = value

:javascript
  $(function() {
    $('.flash').delay(2000).fadeOut(500)
  });