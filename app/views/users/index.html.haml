%section#wrapper{data: {link: "link-users"}}
  .col-lg-12.col-sm-2
    = render 'users/partials/menubar'

    %table.table.table-hover
      %thead
        %tr
          %th Email Address
          %th First Name
          %th Last Name
          %th User Role
          %th Last Updated
          %th.action_column
            Actions

      %tbody
        - if @users.count == 0
          %tr
            %td(colspan="6")
              No users defined
        - else
          - @users.each do |user|
            %tr
              %td
                = link_to user.email, user
              %td First Name
              %td Last Name
              %td User Role
              %td
                = user.updated_at.to_formatted_s(:short)
              %td
                = render 'users/partials/actions', user: user

      %tfoot
        %tr
          %th Email Address
          %th First Name
          %th Last Name
          %th User Role
          %th Last Updated
          %th.action_column
            Actions