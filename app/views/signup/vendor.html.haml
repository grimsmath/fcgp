.container
  .col-md-12.col-sm-2
    %h2 New Vendor Registration

    = nested_form_for(@vendor, html: { multipart: true, role: "form" }) do |f|
      %ul.nav.nav-pills.nav-wizard{role: "tablist"}
        %li.active
          %a{data: {toggle: "tab"}, href: "#general"}
            General Details
          .nav-arrow
        %li
          .nav-wedge
          %a{data: {toggle: "tab"}, href: "#profile"}
            Description &amp; Hours
          .nav-arrow
        %li
          .nav-wedge
          %a{data: {toggle: "tab"}, href: "#green"}
            Green Details
          .nav-arrow
        %li
          .nav-wedge
          %a{data: {toggle: "tab"}, href: "#photos"}
            Photos
          .nav-arrow
        %li
          .nav-wedge
          %a{data: {toggle: "tab"}, href: "#listing"}
            Listing Options
          .nav-arrow
        %li
          .nav-wedge
          %a{data: {toggle: "tab"}, href: "#complete"}
            Complete Registration
          .nav-wedge

      .tab-content
        #general.tab-pane.active
          .row.down-20px
            .col-lg-12
              .form-group
                %label Vendor Name
                = f.text_field :name, class: 'form-control'

            .col-lg-6.col-sm-2
              = render 'vendors/partials/profile/general', f: f

            .col-lg-6.col-sm-2
              = render 'vendors/partials/profile/map', f: f

        #profile.tab-pane
          = render 'vendors/partials/profile/hours', f: f

        #green.tab-pane
          = render 'vendors/partials/profile/green', f: f

        #photos.tab-pane
          = render 'vendors/partials/profile/photos', f: f

        #listing.tab-pane
          = render 'vendors/partials/profile/listing', f: f

        #complete.tab-pane
          = render 'vendors/partials/profile/complete', f: f