.container
  .col-md-2.hidden-xs.bs-callout.bs-callout-green1#column-1
    %h4 Instructions

  .col-md-10.col-sm-2#column-2
    %h2.bg-success.text-center(style="padding: 10px")
      New Vendor Registration

    = nested_form_for(@vendor, html: { multipart: true, role: "form" }) do |f|
      .hidden-xs.hidden-sm
        %ul.nav.nav-pills.nav-wizard{role: "tablist"}
          %li.active
            %a#tab-general{data: {toggle: "tab"}, href: "#general"}
              Step 1
            .nav-arrow
          %li
            .nav-wedge
            %a#tab-profile{data: {toggle: "tab"}, href: "#profile"}
              Step 2
            .nav-arrow
          %li
            .nav-wedge
            %a#tab-green{data: {toggle: "tab"}, href: "#green"}
              Step 3
            .nav-arrow
          %li
            .nav-wedge
            %a#tab-photos{data: {toggle: "tab"}, href: "#photos"}
              Step 4
            .nav-arrow
          %li
            .nav-wedge
            %a#tab-listing{data: {toggle: "tab"}, href: "#listing"}
              Step 5
            .nav-arrow
          %li
            .nav-wedge
            %a#tab-complete{data: {toggle: "tab"}, href: "#complete"}
              Complete Registration
            .nav-wedge
      .hidden-lg.hidden-md
        %ul.nav.nav-pills.nav-stacked{role: "tablist"}
          %li.active
            %a#tab-general{data: {toggle: "pill"}, href: "#general"}
              Step 1
          %li
            %a#tab-profile{data: {toggle: "pill"}, href: "#profile"}
              Step 2
          %li
            %a#tab-green{data: {toggle: "pill"}, href: "#green"}
              Step 3
          %li
            %a#tab-photos{data: {toggle: "pill"}, href: "#photos"}
              Step 4
          %li
            %a#tab-listing{data: {toggle: "pill"}, href: "#listing"}
              Step 5
          %li
            %a#tab-complete{data: {toggle: "pill"}, href: "#complete"}
              Complete Registration

      .tab-content
        #general.tab-pane.active
          .down-20px
            = render 'vendors/partials/profile/brand', f: f
          .down-20px
            = render 'vendors/partials/profile/address', f: f

        #profile.tab-pane
          = render 'vendors/partials/profile/hours', f: f

        #green.tab-pane
          = render 'vendors/partials/profile/green', f: f

        #photos.tab-pane
          = render 'vendors/partials/profile/photos', f: f

        #listing.tab-pane
          = render 'vendors/partials/profile/listing', f: f

        #complete.tab-pane
          = render 'vendors/partials/profile/complete', f: f

:javascript
  $('#tab-photos').click(function() {
    $('.btn-add-photo').popover();
  })

  $('#column-1').height($('#column-2').height());